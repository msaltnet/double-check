<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="net.msalt.doublecheck.MainFragment"
        android:label="@string/main_fragment_label"
        tools:layout="@layout/main_frag">

        <action
            android:id="@+id/action_MainFragment_to_EditTaskFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="net.msalt.doublecheck.edittask.EditTaskFragment"
        android:label="@string/edit_task_fragment_label"
        tools:layout="@layout/edit_task_frag">

        <action
            android:id="@+id/action_EditTaskFragment_to_MainFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>